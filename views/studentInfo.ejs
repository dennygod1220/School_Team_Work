    <!-- HEADER -->
    <header id="main-header" class="py-2 bg-primary text-white">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>
                        <i class="fas fa-cog"></i> Student Infomation</h1>
                </div>
            </div>
        </div>
    </header>

    <!-- POSTS -->
    <section id="posts">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md">
                    <div class="card">
                        <div class="card-header">
                            <h4>學生資料</h4>
                        </div>
                        <table class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th>#</th>
                                    <th>學生姓名</th>
                                    <th>電話</th>
                                    <th>E-mail</th>
                                    <th>系所</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0; i< data.length; i++) { %>
                                <tr>
                                    <td>
                                        <%= data[i].sid %>
                                    </td>
                                    <td>
                                        <%= data[i].name %>
                                    </td>
                                    <td>
                                        <%= data[i].phone %>
                                    </td>
                                    <td>
                                        <%= data[i].email %>
                                    </td>
                                    <td>
                                        <%= data[i].depName %>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
        </div>
    </section>

    <section id="posts">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md">
                    <div class="card">
                        <div class="card-header">
                            <h4>學生成績資料</h4>
                        </div>
                        <table class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    <th>日間部</th>
                                    <th>夜間部</th>
                                    <th>上學期成績</th>
                                    <th>下學期成績</th>
                                    <th>畢業門檻</th>
                                    <th>必修學分</th>
                                    <th>系外選修</th>
                                    <th>系內選修</th>
                                    <th>實得學分</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0; i< data2.length; i++) { %>
                                <tr>
                                    <td>
                                        <%= data2[i].daytime %>
                                    </td>
                                    <td>
                                        <%= data2[i].nighttime %>
                                    </td>
                                    <td>
                                        <%= data2[i].up %>
                                    </td>
                                    <td>
                                        <%= data2[i].down %>
                                    </td>
                                    <td>
                                        <%= data2[i].Graduation_credits %>
                                    </td>
                                    <td>
                                        <%= data2[i].Compulsory %>
                                    </td>
                                    <td>
                                        <%= data2[i].outside %>
                                    </td>
                                    <td>
                                        <%= data2[i].inside %>
                                    </td>
                                    <td>
                                        <%= data2[i].Realize %>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
        </div>
    </section>

    <!-- FOOTER -->
    <footer id="main-footer" class="bg-dark text-white mt-5 p-5">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="lead text-center">
                        Copyright &copy;
                        <span id="year"></span>
                        205417024
                    </p>
                </div>
            </div>
        </div>
    </footer>

</body>